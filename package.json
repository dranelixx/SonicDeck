{
  "name": "sonicdeck",
  "private": true,
  "version": "0.8.1-0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/sync-version.js && tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "node scripts/sync-version.js && tauri dev",
    "tauri:build": "node scripts/sync-version.js && tauri build",
    "prepare": "husky",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 10",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-autostart": "^2.5.1",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-global-shortcut": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "emojibase": "^17.0.0",
    "emojibase-data": "^17.0.0",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "@typescript-eslint/parser": "8.50.1",
    "@vitejs/plugin-react": "^5",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.32",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^7"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{js,jsx,json,css,md}": [
      "prettier --write"
    ],
    "src-tauri/src/**/*.rs": [
      "cargo fmt --manifest-path src-tauri/Cargo.toml --"
    ]
  }
}
